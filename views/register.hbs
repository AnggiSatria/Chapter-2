      </nav>

    <div class="form" style="margin: auto; height:93vh; margin-top: 100px; width:500px;">
        <div class="text">
            <h1 style="text-align: center; font-family: 'Kanit', sans-serif;">Register Your Account</h1>
        </div>

        {{#if messages.error}}
                    <div class='alert alert-danger' role='alert'>
                        {{messages.error}}
                    </div>
        {{/if}}

        <form action="/register" method="POST">
             <div class="mb-3" style="margin-top: 70px;">
            <label for="exampleFormControlInput1" class="form-label" style="font-family: 'Kanit', sans-serif;">Name</label>
            <input type="text" class="form-control" name="Name" id="exampleFormControlInput1" placeholder="" style="width: 100%;">
        </div>
        
        <div class="mb-3" style="margin-top: 70px;">
            <label for="exampleFormControlInput1" class="form-label" style="font-family: 'Kanit', sans-serif;">Email address</label>
            <input type="email" class="form-control" name="Mail" id="exampleFormControlInput1" placeholder="" style="width: 100%;">
        </div>

        <div class="mb-3" style="margin-top: 70px;">
            <label for="exampleFormControlInput1" class="form-label" style="font-family: 'Kanit', sans-serif;">password</label>
            <input type="password" class="form-control" name="Password" id="exampleFormControlInput1" placeholder="" style="width: 100%;">
        </div>

        <div class="button" style="float:right;">
        <button type="submit" class="btn btn-dark" style="border-radius: 10px;">submit</button>
        </div>
        </form>
       

  
    </div>
       
    
